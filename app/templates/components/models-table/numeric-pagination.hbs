<div class="btn-toolbar pull-right tablecontrol" role="toolbar">
  {{#if showSummary}}
    <span class="item summary">
      {{summary}} items
      <a href="#" {{action "clearFilters"}} class="btn btn-simple btn-fab btn-fab-mini clearFilters {{unless anyFilterUsed "invisible"}}">
        <i class="material-icons">{{classes.clearAllFiltersIcon}}</i>
      </a>
    </span>
  {{/if}}
  {{#if showPageSize}}
    {{models-select
      options=pageSizeOptions
      value=pageSize
      class="item form-control pagesize"
    }}
  {{/if}}
  <ul class="item pagination pagination-primary">
    {{#each visiblePageNumbers as |page|}}
      {{#if page.isLink}}
        <li class="{{if page.isActive "active"}}"><a href="#" {{action "gotoCustomPage" page.label}}>{{page.label}}</a></li>
      {{else}}
        <li disabled="disabled"><a>{{page.label}}</a></li>
      {{/if}}
    {{/each}}
  </ul>
</div>